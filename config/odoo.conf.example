[options]
# This is the password that allows database operations:
admin_passwd = change_me_admin_password

# Database settings
db_host = localhost
db_port = 5432
db_user = odoo
db_password = odoo
db_name = False

# Addons path (optimized for official Odoo package)
addons_path = /usr/lib/python3/dist-packages/odoo/addons,/opt/odoo/addons,/opt/odoo/enterprise,/var/odoo_addons

# Server settings
xmlrpc_port = 8069
xmlrpc_interface = 
longpolling_port = 8072

# Logging
logfile = /var/log/odoo/odoo-server.log
log_level = info
log_db = False
log_handler = :INFO
log_db_level = warning

# Performance
workers = 4
max_cron_threads = 2
limit_memory_hard = 2684354560
limit_memory_soft = 2147483648
limit_request = 8192
limit_time_cpu = 600
limit_time_real = 1200

# Security
list_db = True
proxy_mode = True

# Session settings
session_timeout = 3600

# Data directory (compatible with official package)
data_dir = /var/lib/odoo

# Without demo data
without_demo = all